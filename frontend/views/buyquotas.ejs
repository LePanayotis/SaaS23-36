<html>

<head>
    <title>Buy Quotas</title>
    <meta lang="el" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="/public/css/dashboard.css">
    <link rel="stylesheet" type="text/css" href="/public/css/buyquotas.css">
    <link rel=" icon" type="image/png" href="/public/images/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

    <!-- Bootstrap Font Icon CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

</head>

<body>
    <div id="myModal" class="modal fade" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal-title">Success!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p id="modal-text">Data fetched successfully.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary bg-navyblue" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <%- include('bars.ejs') -%>
        <div class="container-fluid main">
            <div class="row">
                <div class="col-sm-4">
                    <div class="card text-center">
                        <div class="title">
                            <i class="fa fa-paper-plane" aria-hidden="true"></i>
                            <h2>Demi</h2>
                        </div>
                        <div class="price">
                            <h4><sup>€</sup>5</h4>
                        </div>
                        <div class="option">
                            <ul>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>5 Quotas</li>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>1 Euro/Chart</li>
                            </ul>
                        </div>
                        <a href="#" id="btn-5">Buy now</a>
                    </div>
                </div>
                <!-- END Col one -->
                <div class="col-sm-4">
                    <div class="card text-center">
                        <div class="title">
                            <i class="fa fa-plane" aria-hidden="true"></i>
                            <h2>Tall</h2>
                        </div>
                        <div class="price">
                            <h4><sup>€</sup>20</h4>
                        </div>
                        <div class="option">
                            <ul>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>25 Quotas</li>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>0.8 Euros/Chart</li>
                            </ul>
                        </div>
                        <a href="#" id="btn-25">Buy now</a>
                    </div>
                </div>
                <!-- END Col two -->
                <div class="col-sm-4">
                    <div class="card text-center">
                        <div class="title">
                            <i class="fa fa-rocket" aria-hidden="true"></i>
                            <h2>Venti</h2>
                        </div>
                        <div class="price">
                            <h4><sup>€</sup>50</h4>
                        </div>
                        <div class="option">
                            <ul>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>100 Quotas</li>
                                <li> <i class="fa fa-check" aria-hidden="true"></i>0.5 Euros/Chart</li>
                            </ul>
                        </div>
                        <a href="#" id="btn-100" data-bs-toggle="modal" data-bs-target="#myModal">Buy now</a>
                    </div>
                </div>
                <!-- END Col three -->
            </div>
        </div>
        </div>

        <script src="/public/scripts/buyquotas.js"></script>
        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

        <!-- jQuery -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

        <!-- Bootstrap JS -->
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>

</html>